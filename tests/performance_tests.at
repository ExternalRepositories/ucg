AT_BANNER([UniversalCodeGrep performance tests])

AT_SETUP([Boost: find all '#endif's])

# @todo Maybe take this in as a parameter?  The only issue is that this doesn't work during a "make distcheck",
# which arguably is not a big deal.
BOOST_PATH=${abs_top_srcdir}/../boost_1_58_0

AT_SKIP_IF([test ! -d "$BOOST_PATH"])

AT_CHECK([time ucg '#endif' ${BOOST_PATH}],
	0,
	stdout,
	stderr,
	[],
	[[
		cat stderr | egrep "real[[:space:]]*" | sed -r 's/real[[:space:]]*(.*)/\1/' > ${abs_top_builddir}/tests/perf_test_results.txt
	]])
	
#AT_FAIL_IF([true])
	
AT_CLEANUP
